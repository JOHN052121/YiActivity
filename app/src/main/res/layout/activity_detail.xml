<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="#ffffff"
            android:id="@+id/appBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/collapsing_toolbar"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/detail_activity_bigImage"
                        app:layout_collapseMode="parallax">
                </ImageView>
                <androidx.cardview.widget.CardView
                        android:layout_width="360dp"
                        android:layout_height="220dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/detail_activity_poster"
                            android:scaleType="centerCrop">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <androidx.appcompat.widget.Toolbar
                    android:layout_marginTop="20dp"
                    android:id="@+id/detail_activity_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_activity_name"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="25dp"
                    android:textColor="#000000"
                    android:textStyle="bold">
            </TextView>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/detail_time"
                    android:id="@+id/detail_activity_time_img"
                    android:layout_below="@+id/detail_activity_name"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/detail_activity_name">
            </ImageView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/detail_activity_time_img"
                    android:id="@+id/detail_activity_time_text"
                    android:layout_marginStart="7dp"
                    android:layout_alignTop="@+id/detail_activity_time_img"
                    android:textSize="14sp"
                    android:textColor="#000000">
            </TextView>

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/detail_location"
                    android:layout_below="@+id/detail_activity_time_img"
                    android:layout_alignStart="@+id/detail_activity_time_img"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/detail_activity_location_img">
            </ImageView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_alignTop="@+id/detail_activity_location_img"
                    android:id="@+id/detail_activity_location_text"
                    android:layout_toEndOf="@+id/detail_activity_location_img"
                    android:layout_marginStart="7dp">
            </TextView>
            <View android:layout_width="match_parent"
                  android:layout_height="6dp"
                  android:layout_marginTop="10dp"
                  android:id="@+id/detail_activity_line1"
                  android:layout_below="@+id/detail_activity_location_img"
                  android:background="#e6e6e6">
            </View>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动内容"
                    android:id="@+id/detail_activity_content_title"
                    android:textSize="16sp"
                    android:layout_below="@+id/detail_activity_line1"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp">
            </TextView>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/detail_activity_content_title"
                    android:id="@+id/detail_activity_content"
                    android:textColor="#000000"
                    android:textSize="13sp">
            </TextView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom">
        <View android:layout_width="match_parent"
              android:layout_height="2px"
              android:background="#e6e6e6"
              android:layout_alignParentTop="true">
        </View>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:id="@+id/activity_detail_sponsor"
                android:src="@drawable/sponsor_icon"
                android:layout_marginStart="30dp">
        </ImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主办方"
                android:textColor="#7cba59"
                android:layout_alignBottom="@+id/detail_activity_enroll_button"
                android:textSize="11sp"
                android:layout_alignStart="@+id/activity_detail_sponsor">
        </TextView>

        <Button android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                android:stateListAnimator="@null"
                android:textSize="15sp"
                android:id="@+id/detail_activity_enroll_button"
                android:textColor="#ffffff"
                android:background="@drawable/detail_activity_enroll_button"
                android:layout_alignParentEnd="true">
        </Button>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>