<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#cdcdcd"
          android:layout_alignParentTop="true"
          android:id="@+id/participant_item_line1">
    </View>
    <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:id="@+id/participant_image_card"
            android:layout_centerVertical="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/participant_image"
                android:scaleType="centerCrop">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/participant_name"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_toEndOf="@+id/participant_image_card"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/participant_image_card">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/participant_phone"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/participant_name"
            android:layout_alignStart="@+id/participant_name"
            android:textSize="13sp"
            android:textColor="#000000">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/participant_state"
            android:textSize="13sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp">
    </TextView>

</RelativeLayout>