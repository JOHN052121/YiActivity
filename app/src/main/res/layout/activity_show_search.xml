<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent" >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:id="@+id/show_search_topLayout"
            android:layout_height="50dp">
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/show_search_return_button"
                android:layout_margin="10dp"
                android:src="@drawable/back_icon">
        </ImageView>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:hint="请输入搜索关键词"
                android:drawableLeft="@drawable/search"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:drawablePadding="5dp"
                android:paddingLeft="8dp"
                android:id="@+id/show_search_activity_keyword"
                android:layout_marginEnd="20dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:background="@drawable/search_activity_edit"
                android:layout_toEndOf="@+id/show_search_return_button">
        </EditText>
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabTextColor="#8a8a8a"
            app:tabTextAppearance="@style/tabLayoutText"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="#000000"
            android:id="@+id/show_search_list_tabLayout"
            android:layout_below="@+id/show_search_topLayout">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/show_search_list_top_viewPager"
            android:layout_below="@+id/show_search_list_tabLayout"
            android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>