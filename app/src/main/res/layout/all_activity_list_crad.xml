<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/all_activity_relative"
                android:layout_height="156dp">
            <androidx.cardview.widget.CardView android:layout_width="180dp"
                                               android:layout_height="100dp"
                                               android:layout_marginTop="8dp"
                                               android:layout_marginStart="5dp"
                                               android:id="@+id/all_activity_image_card"
                                               app:cardElevation="0dp"
                                               app:cardCornerRadius="5dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/all_activity_image">
                </ImageView>
            </androidx.cardview.widget.CardView>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/all_activity_name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_alignTop="@+id/all_activity_image_card"
                    android:layout_toEndOf="@+id/all_activity_image_card">
            </TextView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_activity_type"
                    android:layout_below="@+id/all_activity_name"
                    android:layout_toEndOf="@+id/all_activity_image_card"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:layout_alignStart="@+id/all_activity_name">
            </TextView>

            <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_activity_time"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_alignStart="@+id/all_activity_type"
                    android:layout_toEndOf="@+id/all_activity_image_card"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/all_activity_type">
            </TextView>

            <View
                    android:layout_width="match_parent"
                    android:background="#e6e6e6"
                    android:id="@+id/all_activity_line"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/all_activity_image_card"
                    android:layout_height="1px" />

            <Button
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="报名活动"
                    android:textColor="#36ab60"
                    android:textSize="11sp"
                    android:background="@drawable/home_refresh_button"
                    android:layout_below="@+id/all_activity_line"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true">
            </Button>
        </RelativeLayout>

        <View android:layout_width="match_parent" android:layout_height="12dp"
              android:layout_below="@+id/all_activity_relative"
              android:background="#f2f0f0">
        </View>
    </RelativeLayout>

</androidx.cardview.widget.CardView>