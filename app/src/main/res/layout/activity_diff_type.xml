<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:fitsSystemWindows="true"
                android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/diff_type_top_layout">
        <ImageView android:layout_width="25dp" android:layout_height="25dp"
                   android:src="@drawable/back_icon"
                   android:layout_marginTop="19dp"
                   android:layout_marginStart="10dp"
                   android:id="@+id/activity_diff_type_back">
        </ImageView>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/activity_diff_type_name"
                  android:textSize="18sp"
                  android:textColor="#000000"
                  android:layout_centerInParent="true">
        </TextView>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="#e6e6e6"
          android:layout_below="@+id/diff_type_top_layout"
          android:id="@+id/activity_diff_type_line1">
    </View>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_diff_type_line1">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:layout_margin="10dp"
                   android:scaleType="centerCrop"
                   android:id="@+id/type_image">
        </ImageView>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/diff_type_recycle"
                android:layout_below="@+id/type_image">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>