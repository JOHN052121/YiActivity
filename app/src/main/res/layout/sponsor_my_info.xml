<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView android:layout_width="match_parent"
               android:layout_height="150dp"
               android:background="#4bab51"
               android:id="@+id/sponsor_my_info_topBackground">

    </ImageView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/sponsor_my_info_context"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/sponsor_detail_image_card"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="30dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/sponsor_detail_image">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:id="@+id/sponsor_detail_name"
                    android:layout_alignTop="@+id/sponsor_detail_image_card"
                    android:layout_toEndOf="@+id/sponsor_detail_image_card"
                    android:layout_margin="10dp"
                    android:singleLine="true">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/sponsor_exit_button"
            android:text="退出登录"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="@drawable/exit_login_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp">
    </Button>
</RelativeLayout>