<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_marginTop="30dp"
               android:layout_marginStart="10dp"
               android:layout_centerVertical="true"
               android:scaleType="centerCrop"
               android:id="@+id/subscribe_item_image">
    </ImageView>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="#000000"
              android:layout_marginTop="18dp"
              android:singleLine="true"
              android:id="@+id/subscribe_item_name"
              android:layout_toEndOf="@+id/subscribe_item_image"
              android:layout_marginStart="30dp">
    </TextView>

    <TextView android:layout_width="150dp" android:layout_height="wrap_content"
              android:id="@+id/subscribe_item_intro"
              android:textSize="12sp"
              android:textColor="#000000"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_alignStart="@+id/subscribe_item_name"
              android:layout_below="@+id/subscribe_item_name"
              android:layout_marginTop="3dp">
    </TextView>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/funs"
            android:id="@+id/subscribe_item_funs_image"
            android:layout_below="@+id/subscribe_item_intro"
            android:layout_alignStart="@+id/subscribe_item_intro"
            android:layout_marginTop="5dp">
    </ImageView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscribe_item_funs_text"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/subscribe_item_funs_image"
            android:layout_alignTop="@+id/subscribe_item_funs_image"
            android:textSize="12sp"
            android:text="粉丝"
            android:layout_marginStart="2dp">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/subscribe_item_funs_num"
            android:layout_toEndOf="@+id/subscribe_item_funs_text"
            android:layout_alignTop="@+id/subscribe_item_funs_image"
            android:layout_marginTop="1dp"
            android:layout_marginStart="3dp">
    </TextView>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/subscribe_item_activity"
            android:src="@drawable/activity_icon"
            android:scaleType="centerCrop"
            android:layout_toEndOf="@+id/subscribe_item_funs_num"
            android:layout_alignTop="@+id/subscribe_item_funs_image"
            android:layout_marginStart="15dp">
    </ImageView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscribe_item_activity_text"
            android:layout_marginTop="2dp"
            android:text="活动"
            android:layout_toEndOf="@+id/subscribe_item_activity"
            android:layout_alignTop="@+id/subscribe_item_activity"
            android:textSize="12sp"
            android:layout_marginStart="2dp">
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/subscribe_item_activity_num"
            android:layout_toEndOf="@+id/subscribe_item_activity_text"
            android:layout_alignTop="@+id/subscribe_item_activity"
            android:layout_marginTop="1dp"
            android:layout_marginStart="3dp">
    </TextView>

</RelativeLayout>