<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="70dp">
    <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_height="50dp"
            android:id="@+id/popular_activity_poster_card"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/popular_activity_poster"
                android:scaleType="centerCrop">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/popular_activity_name"
            android:layout_marginEnd="30dp"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/popular_activity_poster_card"
            android:layout_alignTop="@+id/popular_activity_poster_card"
            android:layout_marginStart="20dp">
    </TextView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览量"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@+id/popular_activity_name"
            android:layout_below="@+id/popular_activity_name"
            android:id="@+id/browser_text"
            android:textColor="#8a8a8a">
    </TextView>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/popular_activity_name"
              android:textSize="11sp"
              android:layout_marginStart="5dp"
              android:layout_alignTop="@+id/browser_text"
              android:id="@+id/popular_activity_browser"
              android:layout_toEndOf="@+id/browser_text"
              android:textColor="#8a8a8a">
    </TextView>
</RelativeLayout>